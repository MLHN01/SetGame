        </font>
        <effect>
            <DropShadow color="#666666" radius="5.0" />
        </effect>
    </Label>

    <Button fx:id="resetButton" layoutX="45.0" layoutY="302.0" mnemonicParsing="false" prefHeight="40.0" prefWidth="78.0" styleClass="button" text="Reset">
